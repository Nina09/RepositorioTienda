<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemCarritoActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="115sp"
            android:layout_height="50sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombreItemCarrito"
                android:textSize="14dp"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/textViewDescripcionItemCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/descripcionItemCarrito" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35sp"
            android:layout_height="50sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewCantidadItemCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/cantidadItemCarrito" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewPrecioItemCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textSize="12sp"
                android:text="@string/precioItemCarrito" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTotalItemCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textSize="12sp"
                android:text="@string/totalEnProd" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
